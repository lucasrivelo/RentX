// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Car {
  chassi   String   @id
  name   String
  brand   String
  available   Boolean   @default(true)
  rentals   Rental[]

  @@map("cars")
}

model Rental {
  id   String    @id @default(uuid())
  User_id   String
  Car_id   String
  DataI   DateTime  @default(now())
  DataE   DateTime?
  DataF   DateTime?
  car   Car   @relation(fields: [Car_id], references: [chassi])

  @@map("rentals")
}
